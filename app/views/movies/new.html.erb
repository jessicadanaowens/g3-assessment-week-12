<%= form_for @movie do |f| %>
  <% if @movie.errors.any? %>
    <ul>
      <% for message in @movie.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :synopsis %>
  <%= f.text_field :synopsis %>

  <%= f.submit "Add Movie" %>

<% end %>